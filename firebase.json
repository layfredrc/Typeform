{
	"hosting": {
		"public": "public",
		"rewrites": [
			{
				"source": "/",
				"function": "app"
			},
			{
				"source": "/register",
				"function": "app"
			},
			{
				"source": "/login",
				"function": "app"
			}
		],
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
	},
	"functions": {
		"predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
	}
}
