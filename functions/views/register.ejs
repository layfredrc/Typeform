<%-include("layout/header-register") -%>

<section class="section__register">
    <div class="row">
        <div class="col-1-of-2">
            <img
                src="img/register.png"
                alt="undraw_work_together_h631"
                class="img-register "
            />
            
            <h2 class="heading-secondary h2-register-1">
               Travaillons ensemble !
            </h3>
           
        </div>
        <div class="col-1-of-2">
            <h2 class="heading-secondary u-margin-bottom-small h2-register">
                Créer un compte
            </h3>

            <p class="paragraph-lato-register u-margin-bottom-medium">
                Pour commencer à utiliser nos services, veuillez renseigner votre adresse <br>e-mail et configurer votre mot de passe
            </p>

            <form action="/workspace" class="form" id="signup-form" method="POST">
               
                <div class="form__group">
                    <input
                        type="text"
                        name="firstName"
                        id="firstName"
                        class="form__input"
                        placeholder="Nom"
                        required
                    />
                    <label for="name" class="form__label">Nom</label>
                </div>

                <div class="form__group">
                    <input
                        type="text"
                        name="lastName"
                        id="lastName"
                        class="form__input"
                        placeholder="Prénom"
                        required
                    />
                    <label for="name" class="form__label">Prénom</label>
                </div>

                <div class="form__group">
                    <input
                        type="email"
                        name="signup-email"
                        id="signup-email"
                        class="form__input"
                        placeholder="Adresse e-mail"
                        required
                    />
                    <label for="email" class="form__label">  Adresse e-mail</label>
                </div>

                <div class="form__group">
                    <input
                        type="password"
                        name="signup-password"
                        id="signup-password"
                        class="form__input"
                        placeholder="Mot de passe"
                        required
                    />
                    <label for="email" class="form__label u-margin-bottom-small">  Mot de passe</label>
                </div>
               
                        <div>
                            <button type="submit" class="btn btn--red btn--animated" id="btnSignUp">Inscription</button>
                            <a href="/login" class="btn btn--blue btn--animated">J'ai déjà un compte</a>
                            
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
</section>



